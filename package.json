{
	"name": "glyphconstruction-language",
	"displayName": "GlyphConstruction Language",
	"description": "Support for the GlyphConstruction Language in VSCode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.77.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"contributes": {
		"languages": [
			{
				"id": "glyphconstruction",
				"aliases": [
					"GlyphConstruction",
					"glyphconstruction"
				],
				"extensions": [
					".glyphConstruction"
				],
				"configuration": "./language-configuration.json",
				"icon": {
					"light": "./icons/gc-light.svg",
					"dark": "./icons/gc-dark.svg"
				}
			}
		],
		"grammars": [
			{
				"language": "glyphconstruction",
				"scopeName": "source.glyphconstruction",
				"path": "./syntaxes/glyphconstruction.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "glyphconstruction",
				"path": "./snippets.json"
			}
		]
	}
}