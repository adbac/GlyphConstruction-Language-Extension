{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "GlyphConstruction",
	"patterns": [
		{
			"include": "#construction-declaration"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#entities"
		},
		{
			"include": "#constants"
		}
	],
	"repository": {
		"construction-declaration":{
			"patterns": [{
				"match": "([a-zA-Z_.][a-zA-Z0-9_.]*)\\s*(=)",
				"captures": {
					"1":{"name":"support.variable.glyphconstruction"},
					"2":{"name":"keyword.control.glyphconstruction"}
				}
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.glyphconstruction",
				"match": "[?*>=+-/&|!,~:@^`'.\"\\\\]"
			}]
		},
		"comments":{
			"patterns": [{
				"name": "comment.line.number-sign.glyphconstruction",
				"match": "#.*$"
			}]
		},
		"entities":{
			"patterns": [{
				"name":"entity.name.type.glyphconstruction",
				"match": "\\b(descender|ascender|capHeight|xHeight|top|bottom|innerTop|innerBottom|left|right|innerLeft|innerRight|center|origin|width)\\b"
			}]
		},
		"variables":{
			"patterns": [{
				"name": "variable.language.glyphconstruction",
				"match": "{.+}"
			},
			{
				"name": "variable.language.glyphconstruction",
				"match": "[$][a-zA-Z0-9_-]+"
			}]
		},
		"constants":{
			"patterns": [{
				"name": "constant.numeric.glyphconstruction",
				"match": "\\b[a-fA-F0-9]{4,}\\b"
			},
			{
				"name": "constant.numeric.glyphconstruction",
				"match": "((\\d+\\.\\d*|\\d*\\.\\d+)([eE][+-]?[0-9]+)?j?\\%?)|(\\d+[eE][+-]?[0-9]+j?\\%?)|(\\d+j?\\%?)"
			}]
		}
	},
	"scopeName": "source.glyphconstruction"
}