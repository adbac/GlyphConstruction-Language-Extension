{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "GlyphConstruction",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#global"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#entity"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment.line.number-sign.glyphconstruction",
				"match": "#.*"
			}]
		},
		"variables": {
			"patterns": [{
				"name": "variable.other.glyphconstruction",
				"match": "{.+}"
			},
			{
				"name": "variable.other.glyphconstruction",
				"match": "[$][a-zA-Z0-9_-]+"
			}]
		},
		"constants": {
			"patterns": [{
				"name": "constant.numeric.glyphconstruction",
				"match": "((\\d+\\.\\d*|\\d*\\.\\d+)([eE][+-]?[0-9]+)?j?\\%?)|(\\d+[eE][+-]?[0-9]+j?\\%?)|(\\d+j?\\%?)"
			}]
		},
		"strings":{
			"patterns": [{
				"name":"string.quoted.glyphconstruction",
				"match": "\".*\""
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.glyphconstruction",
				"match": "[&+>?@=|*]"
			}]
		},
		"entity": {
			"patterns": [{
				"name":"entity.name.type.glyphconstruction",
				"match": "descender|ascender|xHeight|capHeight|top|bottom|left|right|innerLeft|innerRight|center|origin|width"
			}]
		},
		"global": {
			"patterns": [{
				"match": "([a-zA-Z_.][a-zA-Z0-9_.]*)\\s?(@)\\s?([a-zA-Z_.][a-zA-Z0-9_.]*),\\s?(([a-zA-Z_.][a-zA-Z0-9_.]*)|`.+`)",
				"captures": {
					"2":{"name":"keyword.control.glyphconstruction"},
					"4":{"name":"entity.name.type.glyphconstruction"},
					"5":{"name":"entity.name.type.glyphconstruction"}
				}
			},
			{
				"match": "(@)([a-zA-Z_.][a-zA-Z0-9_.]*)?(:)?",
				"captures": {
					"1":{"name":"keyword.control.glyphconstruction"},
					"3":{"name":"keyword.control.glyphconstruction"}
				}
			},
			{
				"match": "([a-zA-Z_.][a-zA-Z0-9_.]*)\\s?(=)",
				"captures": {
					"1":{"name":"variable.other.glyphconstruction"},
					"2":{"name":"keyword.control.glyphconstruction"}
				}
			},
			{
				"match": "([|])\\s?([a-fA-F0-9]{4,})",
				"captures": {
					"1":{"name":"keyword.control.glyphconstruction"},
					"2":{"name":"constant.language.glyphconstruction"}
				}
			}]
		}
	},
	"scopeName": "source.glyphconstruction"
}